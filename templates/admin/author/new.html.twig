{% extends 'base.html.twig' %}

{% set titleAction = app.current_route == 'app_admin_author_new' ? 'ajout' : 'édition' %}

{% block title %}
	Admin -
	{{ titleAction }}
	d'un auteur
{% endblock %}

{% block main %}
	<main class="flex-1 mt-12 w-full">
		<section class='px-4 pt-12 pb-6'>
			<h2 class='text-5xl font-extrabold text-center'>Formulaire d'{{ titleAction }}
				d'un auteur</h2>

			<div class="w-1/2 m-auto mt-10">
				<span class="block text-right text-sm text-gray-600">* champs requis</span>

				{{ form_start(form) }}
				{{ form_row(form.name, {
					label: "Nom",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2",
					error_item_class: "text-red-600"
					}) }}

				{{ form_row(form.dateOfBirth, {
					label: "Date de naissance",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2",
					error_item_class: "text-red-600"
					}) }}

				{{ form_row(form.dateOfDeath, {
					label: "Date de décès",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2",
					error_item_class: "text-red-600"
					}) }}

				{{ form_row(form.nationality, {
					label: "Nationnalité",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2",
					error_item_class: "text-red-600"
					}) }}

				{{ form_row(form.books, {
					label: "Livres",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2",
					error_item_class: "text-red-600"
					}) }}

				{{ form_errors(form) }}
				<button type="submit" class="secondary-button m-auto mt-4">Envoyer</button>
				{{ form_end(form) }}
			</div>
		</section>
	</main>
{% endblock %}
