{% extends 'base.html.twig' %}

{% block title %}
	Admin - Ajout d'un livre
{% endblock %}

{% block main %}
	<main class="flex-1 mt-12 w-full">
		<section class='px-4 pt-12 pb-6'>
			<h2 class='text-5xl font-extrabold text-center'>Formulaire d'ajout d'un livre</h2>

			<div class="w-1/2 m-auto mt-10">
				{{ form_start(form) }}
				{{ form_row(form.title, {
					label: "Titre",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.isbn, {
					label: "Numéro ISBN",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.cover, {
					label: "URL de la couverture",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.editedAt, {
					label: "Date d'édition",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.plot, {
					label: "Synopsis",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.pageNumber, {
					label: "Nombre de pages",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.status, {
					label: "Statut",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.editor, {
					label: "Éditeur",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				{{ form_row(form.authors, {
					label: "Auteurs",
					widget_class: "rounded-lg w-full",
					label_class: "block my-2"
					}) }}

				<button type="submit" class="secondary-button m-auto mt-4">Envoyer</button>
				{{ form_end(form) }}
			</div>
		</section>
	</main>
{% endblock %}
